<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    >

    <EditText android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:cursorVisible="false"
        android:editable="false"
        android:id="@+id/editText"
        android:hint="此处显示位置信息"/>

     <Button
         android:id="@+id/button_tellmylocation"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_alignParentLeft="true"
         android:layout_alignParentRight="true"
         android:background="#87CEEB"
         android:text="告知对方"
         android:textColor="#000000"
         android:textSize="30dp" />

     <EditText
         android:id="@+id/editText_pnone"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_above="@+id/button_tellmylocation"
         android:layout_alignParentLeft="true"
         android:layout_marginBottom="21dp"
         android:ems="10"
         android:hint="请输入对方ID" />

     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/editText_pnone"
         android:layout_centerHorizontal="true"
         android:layout_marginBottom="156dp"
         android:text="毕业设计成果     王文实" 
         android:textColor="#000000"
         android:textSize="20dp"/>

</RelativeLayout>
